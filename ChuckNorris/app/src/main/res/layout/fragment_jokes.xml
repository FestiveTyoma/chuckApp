<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:orientation="vertical" android:gravity="center_horizontal"
>
    <ListView android:layout_width="match_parent" android:layout_height="0dp" android:id="@+id/listView"
              android:layout_weight="1">
    </ListView>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextNumber" android:hint="@string/hint" android:autofillHints="@string/hint"
            android:layout_marginBottom="8dp"/>
    <Button
            android:text="@string/reloadButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/reloadButton" android:layout_marginBottom="32dp"/>
</LinearLayout>